{
  "name": "reflexbox",
  "version": "1.0.0-rc3",
  "description": "React flexbox layout and grid system",
  "main": "dist/index.js",
  "scripts": {
    "docs": "webpack -p --progress --colors --config docs/webpack.config.js",
    "docs:dev": "webpack-dev-server --progress --colors --config docs/webpack.config.js",
    "prepublish": "babel src --out-dir dist",
    "karma": "karma start test/karma.config.js",
    "karma:watch": "karma start test/karma.config.js --auto-watch --no-single-run",
    "mocha": "mocha --compilers js:babel/register",
    "mocha:watch": "mocha --watch --watch-extensions jsx --compilers js:babel/register",
    "standard": "standard",
    "start": "npm run docs:dev",
    "test": "npm run mocha && npm run karma"
  },
  "author": "Brent Jackson",
  "license": "MIT",
  "dependencies": {
    "react": "^0.14.0",
    "react-style-normalizer": "^1.2.8"
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "babel": "^5.8.23",
    "babel-loader": "^5.3.2",
    "basscss": "^7.0.4",
    "blk": "^3.1.2",
    "chai": "^3.3.0",
    "color": "^0.10.1",
    "colors": "^1.1.2",
    "css-loader": "^0.19.0",
    "json-loader": "^0.5.3",
    "karma": "^0.13.10",
    "karma-chai": "^0.1.0",
    "karma-chai-plugins": "^0.6.0",
    "karma-chrome-launcher": "^0.2.1",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-webpack": "^1.7.0",
    "lodash": "^3.10.1",
    "mocha": "^2.3.3",
    "postcss-custom-media": "^5.0.0",
    "postcss-custom-properties": "^5.0.0",
    "postcss-import": "^7.0.0",
    "postcss-loader": "^0.6.0",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-hot-loader": "^1.3.0",
    "react-to-jsx": "^1.3.2",
    "serialize-javascript": "^1.1.2",
    "skin-deep": "^0.8.1",
    "standard": "^5.3.1",
    "style-loader": "^0.12.4",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.0"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jxnblk/reflexbox.git"
  },
  "keywords": [
    "react",
    "flexbox",
    "layout",
    "grid"
  ],
  "bugs": {
    "url": "https://github.com/jxnblk/reflexbox/issues"
  },
  "standard": {
    "globals": [
      "beforeEach",
      "context",
      "describe",
      "it"
    ]
  },
  "homepage": "https://github.com/jxnblk/reflexbox#readme"
}
